@using ExpertCenter.MvcApp.Models.Column

@model ColumnCreateModel

<li class="row row-cols-4 align-items-center py-2 my-1 column border-warning border rounded">
    <input type="hidden" asp-for="ColumnId" />
    <input type="hidden" asp-for="Number" />
    <div class="number col-auto">
        @(Model.Number).
    </div>
    <div class="col-6">
        <div class="form-group">
            <input asp-for="ColumnName" class="form-control" placeholder="Название колонки" autocomplete="off" />
            <span asp-validation-for="ColumnName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            <input asp-for="ColumnType" class="form-control" value="@ViewBag.ColumnTypes[0].Value" hidden />
            <div class="dropdown column-type-selector">
                <button class="btn btn-light dropdown-toggle w-100 column-type-selector-button"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                    @ViewBag.ColumnTypes[0].Text
                </button>
                <ul class="dropdown-menu">
                    @foreach (var columnType in ViewBag.ColumnTypes)
                    {
                        <li><button type="button"
                                    class="dropdown-item"
                                    value="@columnType.Value">@columnType.Text</button></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-2">
        <button class="btn btn-danger w-100 delete-column" type="button">Удалить</button>
    </div>
</li>
