@using ExpertCenter.MvcApp.Models.PriceList
@model IEnumerable<PriceListViewModel>

@{
    ViewData["Title"] = "Прайс листы";
}

<h1>Список прайс листов</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PriceListId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceListId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="link-secondary" asp-action="Details" asp-route-id="@item.PriceListId">Подробнее</a> |
                <a class="link-primary" asp-action="Edit" asp-route-id="@item.PriceListId">Изменить</a> |
                <a class="link-danger" asp-action="Delete" asp-route-id="@item.PriceListId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
