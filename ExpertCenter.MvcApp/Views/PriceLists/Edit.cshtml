@model ExpertCenter.DataContext.Entities.PriceList

@{
    ViewData["Title"] = "Изменить \u2014 прайс лист";
}

<h4>Изменить: @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PriceListId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label" required="true">Наименование</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row justify-content-between mt-3">
                <div class="col-auto">
                    <a class="btn btn-secondary" asp-action="Index">Отменить</a>
                </div>
                <div class="col-auto form-group">
                    <button type="submit" class="btn btn-success">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
